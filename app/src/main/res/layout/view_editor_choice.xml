<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_red_dark">

    <ImageView
        android:id="@+id/iv_editor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/info_black_icon" />

    <com.flocktamer.customview.CustomTextView
        android:id="@+id/tv_editor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:gravity="center"
        android:text="sadfjhk"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/tv_editor_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_editor_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:src="@drawable/curated_check" />

    <com.flocktamer.customview.CustomTextView
        android:id="@+id/tv_edit_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dimen_8dp"

        android:text="@string/edit_text"
        android:textColor="@android:color/white" />
</RelativeLayout>
