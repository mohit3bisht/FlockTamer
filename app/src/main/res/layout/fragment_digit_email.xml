<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/dimen_20dp"
    android:layout_marginLeft="@dimen/dimen_20dp"
    tools:context="com.flocktamer.fragments.DigitEmailFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_digit_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:hint="First Name">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:textColor="@color/theme_blue_dark" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_digit_lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:hint="Last Name">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/theme_blue_dark" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_digit_ccode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:entries="@array/array_countrycode" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_digit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Phone">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone|number"
                android:paddingLeft="@dimen/dimen_10dp"
                android:singleLine="true"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/theme_blue_dark" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_digit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:hint="Email">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="@color/theme_blue_dark" />
    </android.support.design.widget.TextInputLayout>

    <com.flocktamer.customview.CustomTextView
        android:id="@+id/tv_digit_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/master_button"
        android:gravity="center"
        android:text="@string/continue_text"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_18sp" />
</LinearLayout>
